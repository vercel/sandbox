{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "strict": true,
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "vitest.config.ts", "vitest.setup.ts"]
}
